<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Fondodelogin"
    tools:context="app.prueba.dogcatalogo.MainActivity">



    <EditText
        android:id="@+id/edtusuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:drawableLeft="@drawable/ic_account_box_black_24dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/logoperro"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="@+id/logoperro"
        app:layout_constraintTop_toBottomOf="@+id/logoperro" />

    <EditText
        android:id="@+id/edtcontra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="contraseña"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/edtusuario"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="@+id/edtusuario"
        app:layout_constraintTop_toBottomOf="@+id/edtusuario" />




    <Button
        android:id="@+id/btnsesion"
        android:layout_width="225dp"
        android:layout_height="49dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/boton_redondo"
        android:text="Iniciar sesion"
        app:layout_constraintEnd_toEndOf="@+id/edtcontra"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="@+id/edtcontra"
        app:layout_constraintTop_toBottomOf="@+id/edtcontra" />

    <Button
        android:id="@+id/btnregistro"
        android:layout_width="227dp"
        android:layout_height="44dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/boton_redondo"
        android:text="Registrarse"
        app:layout_constraintEnd_toEndOf="@+id/btnsesion"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/btnsesion"
        app:layout_constraintTop_toBottomOf="@+id/btnsesion" />

    <CheckBox
        android:id="@+id/chkrecordarme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Recordarme"
        app:layout_constraintEnd_toEndOf="@+id/btnregistro"
        app:layout_constraintStart_toStartOf="@+id/btnregistro"
        app:layout_constraintTop_toBottomOf="@+id/btnregistro" />

    <ImageView
        android:id="@+id/logoperro"
        android:layout_width="160dp"
        android:layout_height="129dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tx_olvido"
        android:layout_width="174dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:allowUndo="true"
        android:ems="10"
        android:hint="¿Olvido su contraseña?"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/chkrecordarme"
        app:layout_constraintHorizontal_bias="0.328"
        app:layout_constraintStart_toStartOf="@+id/chkrecordarme"
        app:layout_constraintTop_toBottomOf="@+id/chkrecordarme" />

</androidx.constraintlayout.widget.ConstraintLayout>